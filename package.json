{
	"name": "logger",
	"version": "0.0.0",
	"description": "powerful console logger",
	"main": "dist/index.js",
	"keywords": [],
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"!**/*.(test|spec).ts"
	],
